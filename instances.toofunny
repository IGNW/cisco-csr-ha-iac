resource "aws_key_pair" "cisco-csr" {
  key_name   = "cisco-csr"
  public_key = "${file("cisco-csr.pub")}"
}

resource "aws_instance" "csr-instance" {
  count         = "${var.instance_count}"
  ami           = "${lookup(var.ami,var.aws_region)}"
  instance_type = "${var.instance_type}"
  key_name      = "${aws_key_pair.cisco-csr.key_name}"
  user_data     = "${file("install_apache.sh")}"

  tags = {
    Name  = "Terraform-${count.index + 1}"
    Batch = "5AM"
  }
}