#### arn:aws:iam::312506926764:policy/Force_Resource_Tagging

{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowEC2InstanceAndEBSVolumeCreationOnlyIfRequiredTag1Exists",
            "Effect": "Deny",
            "Action": [
                "ec2:CreateVolume",
                "ec2:RunInstances"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "ForAllValues:StringNotEqualsIgnoreCase": {
                    "aws:TagKeys": [
                        "Owner"
                    ]
                }
            }
        },
        {
            "Sid": "AllowEC2InstanceAndEBSVolumeCreationOnlyIfRequiredTag2Exists",
            "Effect": "Deny",
            "Action": [
                "ec2:CreateVolume",
                "ec2:RunInstances"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "ForAllValues:StringNotEqualsIgnoreCase": {
                    "aws:TagKeys": [
                        "Team"
                    ]
                }
            }
        },
        {
            "Sid": "AllowEC2InstanceAndEBSVolumeCreationOnlyIfRequiredTag3Exists",
            "Effect": "Deny",
            "Action": [
                "ec2:CreateVolume",
                "ec2:RunInstances"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:instance/*"
            ],
            "Condition": {
                "ForAllValues:StringNotEqualsIgnoreCase": {
                    "aws:TagKeys": [
                        "Project"
                    ]
                }
            }
        }
    ]
}